# s.jesn.zip Production Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Environment mode: "development" or "production"
# In production mode, all secrets are REQUIRED
ENVIRONMENT=production

# Database Configuration (REQUIRED in production)
DATABASE_URL=ws://your-database-host:3100/rpc
DATABASE_NAME=users
NAMESPACE_NAME=s.jesn.zip
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_secure_db_password_here

# Administrative Settings (REQUIRED in production)
# Use a strong, unique password
ADMIN_PASSWORD=your_strong_admin_password_here

# Login Configuration (REQUIRED in production)
# Password required to access login/signup pages
LOGIN_PASSWORD=your_login_page_password_here

# File Storage Configuration (REQUIRED in production)
UPLOAD_DIRECTORY=/mnt/storagebox/uploads

# File Prefixes (optional, has defaults)
PERMANENT_FILE_PREFIX=PERM_
CONVERSION_INPUT_PREFIX=JESNZIP_CONV_INPUT__

# Security Settings
# Comma-separated list of allowed origins for CORS
# In production, restrict to your domain(s)
ALLOWED_ORIGINS=https://s.jesn.zip,https://www.s.jesn.zip

# Session Management
SESSION_EXPIRY_HOURS=720
MAX_SESSIONS_PER_USER=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Maximum upload size in MB
MAX_REQUEST_SIZE_MB=1000

# Password Requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_SPECIAL_CHAR=true
REQUIRE_PASSWORD_NUMBER=true
REQUIRE_PASSWORD_UPPERCASE=true

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.mp4,.mp3,.wav,.webm,.ogg,.flac,.m4a,.avi,.mkv,.mov,.wmv,.png,.jpg,.jpeg,.gif,.webp,.pdf,.zip,.txt

# Blocked file extensions (security - comma-separated)
BLOCKED_EXTENSIONS=.exe,.bat,.cmd,.sh,.ps1,.vbs,.js,.msi,.dll,.scr,.com,.pif,.hta

# Account Lockout Settings
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=900

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=9941

# OAuth Settings
OAUTH_CODE_EXPIRY_SECONDS=300

# Database Pool Size
DB_POOL_SIZE=10
